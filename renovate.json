{
    "extends": [
        "config:base"
    ],
    "schedule": [
        "* 6 * * *"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "branch"
    },
    "packageRules": [
        {
            "matchManagers": ["dockerfile"],
            "matchUpdateTypes": ["digest"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": ["poetry"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": ["github-actions"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "branch"
        }
    ]
}
