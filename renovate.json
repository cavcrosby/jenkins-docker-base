{
    "extends": [
        "config:base"
    ],
    "prConcurrentLimit": 4,
    "timezone": "utc",
    "schedule": [
        "at 10:00 am every 1 day"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "branch",
        "schedule": [
            "at 10:00 am every 1 day"
        ]
    },
    "packageRules": [
        {
            "matchManagers": ["poetry"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": ["github-actions"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": ["dockerfile"],
            "matchUpdateTypes": ["digest"],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "at 9:00 am every 1 day"
            ]
        },
        {
            "matchManagers": ["jenkins"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "after 5:00 am before 8:00 am"
            ]
        }
    ]
}
