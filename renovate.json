{
    "extends": [
        "config:base"
    ],
    "prConcurrentLimit": 4,
    "timezone": "utc",
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "branch",
        "schedule": [
            "at 1:00 am every 1 day"
        ]
    },
    "packageRules": [
        {
            "matchManagers": ["poetry"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "at 1:00 am every 1 day"
            ]
        },
        {
            "matchManagers": ["github-actions"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "at 1:00 am every 1 day"
            ]
        },
        {
            "matchManagers": ["dockerfile"],
            "matchUpdateTypes": ["digest"],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "at 12:00 pm every 1 day"
            ]
        },
        {
            "matchManagers": ["jenkins"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "branch",
            "rebaseWhen": "conflicted",
            "schedule": [
                "after 8:00 pm before 11:00 pm"
            ]
        }
    ]
}
