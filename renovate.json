{
    "extends": [
        "config:base"
    ],
    "platformAutomerge": true,
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "branch"
    },
    "packageRules": [
        {
            "matchUpdateTypes": ["minor", "patch"],
            "matchCurrentVersion": "!/^0/",
            "automerge": true,
            "automergeType": "branch"
        }
    ]
}
