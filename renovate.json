{
    "extends": [
        "config:base"
    ],
    "prConcurrentLimit": 4,
    "timezone": "utc",
    "schedule": [
        "after 3:00 pm before 10:00 pm"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "branch"
    },
    "packageRules": [
        {
            "matchManagers": ["dockerfile"],
            "matchUpdateTypes": ["digest"],
            "automerge": true,
            "automergeType": "branch",
            "schedule": [
                "at 11:00 pm every 1 day"
            ]
        },
        {
            "matchManagers": ["poetry"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": ["github-actions"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchManagers": ["jenkins"],
            "matchUpdateTypes": ["major", "minor", "patch"],
            "automerge": true,
            "automergeType": "branch",
            "rebaseWhen": "conflicted"
        }
    ]
}
